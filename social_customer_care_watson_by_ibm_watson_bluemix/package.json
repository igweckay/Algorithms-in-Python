{
  "name": "social-customer-care",
  "version": "0.2.1",
  "description": "Starter Kit demonstrating how IBM Watson can be used to support customer care on twitter",
  "scripts": {
    "start": "DEBUG='scc:*' node server.js",
    "test-unit": "istanbul cover ./node_modules/mocha/bin/_mocha ./test/unit",
    "test-casper": "NODE_ENV=test casperjs test ./test/casper/test.*.js",
    "test-casper-runner": "NODE_ENV=test node test/casper-runner.js",
    "test-integration": "istanbul cover ./node_modules/mocha/bin/_mocha ./test/integration",
    "test": "npm run lint && npm run test-unit",
    "lint": "eslint .",
    "build": "DEBUG='scc:*' gulp compile",
    "autofix": "eslint --fix .",
    "codecov": "npm run test && (codecov || true)",
    "validate": "npm ls"
  },
  "dependencies": {
    "async": "^2.0.0-rc.6",
    "backoff": "^2.5.0",
    "bluebird": "^3.4.1",
    "body-parser": "^1.13.2",
    "cf-deployment-tracker-client": "^0.1.1",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "debug": "^2.2.0",
    "ejs": "^2.4.1",
    "express": "^4.12.2",
    "express-rate-limit": "^2.1.0",
    "express-secure-only": "^0.2.1",
    "extend": "^3.0.0",
    "helmet": "^2.1.1",
    "morgan": "^1.7.0",
    "object.omit": "^2.0.0",
    "socket.io": "~1.4.8",
    "twitter": "^1.3.0",
    "watson-developer-cloud": "^2.8.2"
  },
  "devDependencies": {
    "browser-sync": "^2.9.9",
    "casperjs": "^1.1.1",
    "codecov": "^1.0.1",
    "eslint": "^2.8.0",
    "gulp-autoprefixer": "^3.0.2",
    "gulp-clean": "^0.3.1",
    "gulp-concat": "^2.6.0",
    "gulp-iconfont-css": "0.0.9",
    "gulp-iconfont": "^1.0.0",
    "gulp-nodemon": "^2.0.2",
    "gulp-plumber": "^1.0.1",
    "gulp-sass": "^2.0.4",
    "gulp": "^3.9.0",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "phantomjs": "^2.1.7",
    "precommit-hook": "^3.0.0",
    "run-sequence": "^1.1.5",
    "supertest": "^1.2.0",
    "wrench": "^1.5.8"
  },
  "engines": {
